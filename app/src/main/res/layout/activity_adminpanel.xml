<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/totalInstallsAllTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="Total Installs All Time:    0"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/totalInstallsToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="Total Installs Today:        0"
                android:textSize="20dp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:alpha="0.6"
                android:scaleType="centerCrop"
                android:src="@drawable/line" />

            <!--        <TextView-->
            <!--            android:id="@+id/totalSignUpsAlltime"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_margin="3dp"-->
            <!--            android:text="Total SignUp All Time:    0"-->
            <!--            android:textSize="20dp" />-->


            <!--        <TextView-->
            <!--            android:id="@+id/totalSignUpsToday"-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_margin="3dp"-->
            <!--            android:text="Total SignUp Today:        0"-->
            <!--            android:textSize="20dp" />-->


        </LinearLayout>









        <EditText
            android:id="@+id/Refer_App_url2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Refer_App_url2"
            android:inputType="textPersonName"

            />

        <EditText
            android:id="@+id/databaseEdittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ems="10"
            android:hint="Add database url"
            android:inputType="textPersonName"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Refer_App_url_BTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/btn_bg"
                android:text="ADD ReferApp URL"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.105" />

            <Button
                android:id="@+id/databaseBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/btn_bg"
                android:text="ADD Database URL"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.105" />


        </LinearLayout>


        <Switch
            android:id="@+id/switch_Exit_Nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:checked="false"
            android:gravity="center"
            android:text="Exit Navigation"
            android:textColor="#090909"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/Activate_Ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:checked="false"
            android:gravity="center"
            android:text="Ads"
            android:textColor="#090909"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/App_updating_Switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:checked="false"
            android:gravity="center"
            android:text="App Updating"
            android:textColor="#090909"
            android:textOff="Off"
            android:textOn="On"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="UseSwitchCompatOrMaterialXml" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/Ad_Network"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Ad_Network"
                android:textSize="12dp"

                />


        </LinearLayout>

    </LinearLayout>

</ScrollView>