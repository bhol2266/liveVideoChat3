<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeColorExtralight"
    android:fitsSystemWindows="true">


    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/progressbar"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="100dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/splashscreen_lottie_main"
        app:lottie_repeatCount="5"
        app:lottie_speed="1.3" />



    <LinearLayout
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView_splashscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/rubrik_bold"
            android:elevation="10dp"
            android:text="@string/app_name"
            android:textColor="@color/semiblack"
            android:textSize="27dp"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_progressbar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/splashscreen_lottie_progressbar"
            app:lottie_speed="0.7" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/semiblack"

            android:text="loading..."
            android:textSize="16dp" />

    </LinearLayout>

</RelativeLayout>